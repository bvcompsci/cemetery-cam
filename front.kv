#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
<ListItemButton>:
    on_press:app.root.current = 'camera'
    on_press:app.root.goto_cam(self.text)
    size_hint_y:None
    height:100
<FrontPage>:
    get_screenmanager:app.root
	get_firstname:firstname_input
	get_lastname:lastname_input
	search_result:return_list
    get_year:year_id
    get_month:month_id
    get_date:date_id
    get_upload_type:toggle_button
	BoxLayout:
		size: root.size
		orientation:'vertical'
		BoxLayout:
			orientation:'vertical'
			size_hint_y:2
			BoxLayout:
				size_hint_y:1
				TextInput:
					id:firstname_input
					multiline:False
				Button:
					text:"First name"
			BoxLayout:
				size_hint_y:1
				TextInput:
					id:lastname_input
					multiline:False
				Button:
					text:"Last name"
			BoxLayout:
                id:birthdate
                orientation:"horizontal"
                Button:
                    id:month_id
                    text:"month"
                    on_press:root.pickMonth()
                Button:
                    id:date_id
                    text:"date"
                    on_press:root.pickDate()
                Button:
                    id:year_id
                    on_press:root.pickYear()
                    text:"year"
            BoxLayout:
                Button:
                    text:"Bulk Upload"
                    on_press:app.root.current = 'upload'
                    on_press:app.root.reset_upload()
			BoxLayout:
				Button:
					text:"search"	
					on_press:root.getUsers()
                ToggleButton:
                    id:toggle_button
                    text:"Single" if self.state == "normal" else "Multi"
	
		BoxLayout:
			size_hint_y:3
			ListView:
				id:return_list
                adapter:
                    ListAdapter(data=[],cls=ListItemButton)
